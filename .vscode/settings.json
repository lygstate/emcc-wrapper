{
  "cmake.configureOnOpen": false,
  "files.autoGuessEncoding": true,
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
  "C_Cpp.vcFormat.newLine.beforeElse": false,
  "C_Cpp.vcFormat.newLine.beforeCatch": false,
  "C_Cpp.vcFormat.space.pointerReferenceAlignment": "right",
  "C_Cpp.vcFormat.indent.gotoLabels": "oneLeft",
  "C_Cpp.formatting": "vcFormat",
  "files.associations": {
    "*.c.inc": "c"
  },
  "terminal.integrated.profiles.linux": {
    "linux-build-x64": {
      "path": "bash",
      "overrideName": true,
      "args": [
        "--login",
        "-c",
        "mkdir -p $BUILDDIR && cd $BUILDDIR && exec bash"
      ],
      "env": {
        "BUILDDIR": "build-linux-x64",
      }
    }
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell -NoProfile": {
      "overrideName": true,
      "source": "PowerShell",
      "args": [
        "-NoProfile"
      ]
    },
    "cmder": {
      "path": "${env:windir}\\System32\\cmd.exe",
      "overrideName": true,
      "args": []
    },
    "MSYS2-CYGWIN": {
      "path": "C:/CI-Tools/msys64/usr/bin/bash.exe",
      "overrideName": true,
      "args": [
        "--login",
        "-i"
      ],
      "env": {
        "MSYS": "winsymlinks:native",
        "MSYSTEM": "CYGWIN",
        "CHERE_INVOKING": "1",
      }
    },
    "MSYS2-CYGWIN-STAGE1": {
      "path": "D:/CI-Tools/msys64-stage1/msys64/usr/bin/bash.exe",
      "overrideName": true,
      "args": [
        "--login",
        "-i"
      ],
      "env": {
        "MSYS": "winsymlinks:native",
        "MSYSTEM": "CYGWIN",
        "CHERE_INVOKING": "1"
      }
    },
    "MSYS2-CYGWIN-STAGE2": {
      "path": "D:/CI-Tools/msys64-stage2/msys64/usr/bin/bash.exe",
      "overrideName": true,
      "args": [
        "--login",
        "-i"
      ],
      "env": {
        "MSYS": "winsymlinks:native",
        "MSYSTEM": "CYGWIN",
        "CHERE_INVOKING": "1"
      }
    },
    "MSYS2-CYGWIN-STAGE3": {
      "path": "D:/CI-Tools/msys64-stage3/msys64/usr/bin/bash.exe",
      "overrideName": true,
      "args": [
        "--login",
        "-i"
      ],
      "env": {
        "MSYS": "winsymlinks:native",
        "MSYSTEM": "CYGWIN",
        "CHERE_INVOKING": "1"
      }
    },
    "msvc-2022": {
      "path": "${env:windir}\\System32\\cmd.exe",
      "overrideName": true,
      "args": [
        "/K",
        "build-msvc-shell.bat"
      ],
    },
    "emsdk-4.0.7": {
      "path": "${env:windir}\\System32\\cmd.exe",
      "overrideName": true,
      "args": [
        "/K",
        "D:/CI-Tools/emsdk/emsdk_env.bat",
        "activate",
        "4.0.7"
      ],
    },
    "MSYS2-CYGWIN-STAGE2-CMD": {
      "path": "${env:windir}\\System32\\cmd.exe",
      "overrideName": true,
      "env": {
        "MSYS": "winsymlinks:native",
        "MSYSTEM": "CYGWIN",
        "CHERE_INVOKING": "1",
        "PATH":"D:/CI-Tools/msys64-stage2/msys64/usr/bin/;${env:PATH}",
      }
    },
  },
  "cmake.buildDirectory": "${workspaceRoot}/build/${buildKitTriple}-${buildKitVersionMajor}-${buildKitVersionMinor}-${buildType}",
  "terminal.integrated.defaultProfile.windows": "cmder",
  "git.ignoreLimitWarning": true
}
